{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base",
        "prettier",
        "plugin:node/recommended"
    ],
    "parser": "babel-eslint",
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "varsIgnorePattern": "should|expect"
            }
        ],
        "no-console": "off",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "node/no-unpublished-require": [
            "error",
            {
                "allowModules": [
                    "chai",
                    "chai-http"
                ]
            }
        ],
        "no-underscore-dangle":  [
            "error", 
            { 
                "allow": [
                    "_id"
                ] 
            }
        ]
    }
}